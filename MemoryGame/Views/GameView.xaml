<Window x:Class="MemoryGame.Views.GameView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:MemoryGame.ViewModels"
        xmlns:converters="clr-namespace:MemoryGame.Converters"
        mc:Ignorable="d"
        Title="Game Setup" Height="600" Width="650"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="MistyRose">
	
	<Window.Resources>
		<BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
		<converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
	</Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Top Menu -->
        <Menu Grid.Row="0" Margin="0,0,0,10" Background="LavenderBlush">
            <MenuItem Header="File" Foreground="IndianRed">
                <MenuItem Header="New Game" Command="{Binding NewGameCommand}" Foreground="IndianRed" Background="LavenderBlush"/>
                <MenuItem Header="Open Game" Command="{Binding OpenGameCommand}" Foreground="IndianRed" Background="LavenderBlush"/>
                <MenuItem Header="Save Game" Command="{Binding SaveGameCommand}" Foreground="IndianRed" Background="LavenderBlush"/>
                <Separator />
                <MenuItem Header="Exit" Command="{Binding ExitCommand}" Foreground="IndianRed" Background="LavenderBlush"/>
            </MenuItem>
            <MenuItem Header="Statistics" Command="{Binding ShowStatisticsCommand}" Foreground="IndianRed"/>
            <MenuItem Header="Help" Foreground="IndianRed">
                <MenuItem Header="About" Command="{Binding ShowAboutCommand}" Foreground="IndianRed" Background="LavenderBlush"/>
            </MenuItem>
        </Menu>

        <!-- Player Info Panel -->
        <Border Grid.Row="1" 
                Background="LavenderBlush" 
                BorderBrush="IndianRed" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="15" 
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Avatar -->
                <Image Grid.Column="0" 
                        Width="80" 
                        Height="80"
                        Source="{Binding CurrentPlayer.ImagePath}" 
                        Stretch="Uniform" 
                        Margin="0,0,15,0"/>

                <!-- Player Info -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Game Setup" 
                               FontSize="22" 
                               FontWeight="Bold" 
                               Foreground="IndianRed"
                               Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Player: " 
                                   FontWeight="Bold" 
                                   Foreground="IndianRed"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding CurrentPlayer.Username}" 
                                   VerticalAlignment="Center" 
                                   Foreground="IndianRed"
                                   Margin="5,0,0,0" 
                                   FontSize="16"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Game Configuration Grid -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column - Game Type Selection -->
            <GroupBox Grid.Column="0" Header="Game Type" Margin="0,0,10,0" Foreground="IndianRed" BorderBrush="IndianRed">
                <GroupBox.Background>
                    <SolidColorBrush Color="LavenderBlush" Opacity="0.7"/>
                </GroupBox.Background>
                <StackPanel Margin="10">
                    <RadioButton Content="Standard (4x4)" 
                                 IsChecked="{Binding IsStandardMode}" 
                                 Foreground="IndianRed"
                                 Margin="0,5"/>

                    <RadioButton Content="Custom" 
                                 IsChecked="{Binding IsCustomMode}" 
                                 Foreground="IndianRed"
                                 Margin="0,5"/>

					<!-- Custom Game Options -->
					<Grid Margin="20,10,0,0"
						  IsEnabled="{Binding IsCustomMode}">
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
						</Grid.RowDefinitions>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto"/>
							<ColumnDefinition Width="*"/>
						</Grid.ColumnDefinitions>

						<!-- Board Size -->
						<TextBlock Grid.Row="0" Grid.Column="0"
								   Text="Board Size (MxN):"
								   Foreground="IndianRed"
								   VerticalAlignment="Center"
								   Margin="0,0,10,0"/>
						<StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
							<TextBox Text="{Binding CustomRows, UpdateSourceTrigger=PropertyChanged}"
									 Width="40" Margin="0,0,5,0"
									 BorderBrush="IndianRed"/>
							<TextBlock Text="x" Foreground="IndianRed" VerticalAlignment="Center" Margin="0,0,5,0"/>
							<TextBox Text="{Binding CustomColumns, UpdateSourceTrigger=PropertyChanged}"
									 Width="40"
									 BorderBrush="IndianRed"/>
						</StackPanel>

						<!-- Error Message -->
						<TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                        Text="{Binding CardCountErrorMessage}"
                        Foreground="Red"
                        Margin="0,5,0,0"
                        TextWrapping="Wrap"
                        Visibility="{Binding IsValidCardCount, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
					    </Grid>

                    <!-- Time Selection (applies to both Standard and Custom) -->
                    <Grid Margin="0,20,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="Time per player (sec):" 
                                   Foreground="IndianRed"
                                   VerticalAlignment="Center" 
                                   Margin="0,0,10,0"/>
                        <TextBox Grid.Row="0" Grid.Column="1" 
                                 Text="{Binding PlayerTimeSeconds, UpdateSourceTrigger=PropertyChanged}" 
                                 Width="80" 
                                 BorderBrush="IndianRed"
                                 HorizontalAlignment="Left"/>
                    </Grid>
                </StackPanel>
            </GroupBox>

            <!-- Right Column - Category Selection -->
            <GroupBox Grid.Column="1" Header="Image Category" Margin="10,0,0,0" Foreground="IndianRed" BorderBrush="IndianRed">
                <GroupBox.Background>
                    <SolidColorBrush Color="LavenderBlush" Opacity="0.7"/>
                </GroupBox.Background>
                <StackPanel Margin="10">
                    <RadioButton Content="Category 1 - Animals" 
                                 IsChecked="{Binding CategoryOne}"
                                 Foreground="IndianRed"
                                 Margin="0,5"/>

                    <RadioButton Content="Category 2 - Food" 
                                 IsChecked="{Binding CategoryTwo}" 
                                 Foreground="IndianRed"
                                 Margin="0,5"/>

                    <RadioButton Content="Category 3 - Landscapes" 
                                 IsChecked="{Binding CategoryThree}"
                                 Foreground="IndianRed"
                                 Margin="0,5"/>
                </StackPanel>
            </GroupBox>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,20,0,0">
            <Button Content="Start Game" 
                    Command="{Binding StartGameCommand}" 
                    Width="120" 
                    Height="35" 
                    Margin="10,0"
                    Background="LavenderBlush"
                    Foreground="IndianRed"
                    BorderBrush="IndianRed"/>

            <Button Content="Open Game" 
                    Command="{Binding OpenGameCommand}" 
                    Width="120" 
                    Height="35" 
                    Margin="10,0"
                    Background="LavenderBlush"
                    Foreground="IndianRed"
                    BorderBrush="IndianRed"/>

            <Button Content="Back to Login" 
                    Command="{Binding BackToLoginCommand}" 
                    Width="120" 
                    Height="35" 
                    Margin="10,0"
                    Background="LavenderBlush"
                    Foreground="IndianRed"
                    BorderBrush="IndianRed"/>
        </StackPanel>

        <!-- Statistics Dialog -->
        <Grid x:Name="StatisticsDialog" 
              Grid.RowSpan="4" 
              Background="#80000000" 
              Visibility="{Binding IsStatisticsVisible, Converter={StaticResource BoolToVisibilityConverter}}"
              Panel.ZIndex="1000">
            <Border Background="LavenderBlush" 
                    Width="400" 
                    Height="300" 
                    CornerRadius="5"
                    BorderBrush="IndianRed"
                    BorderThickness="1"
                    Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Game Statistics" 
                               Grid.Row="0" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Foreground="IndianRed"
                               Margin="0,0,0,15"/>

                    <!-- Statistics Content -->
                    <StackPanel Grid.Row="1">
                        <TextBlock Text="{Binding CurrentPlayer.Username, StringFormat=Player: {0}}" 
                                   FontWeight="Bold"
                                   Foreground="IndianRed"
                                   Margin="0,0,0,10"/>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Games Played:" Grid.Column="0" Foreground="IndianRed"/>
                            <TextBlock Text="{Binding CurrentPlayer.GamesPlayed}" Grid.Column="1" FontWeight="Bold" Foreground="IndianRed"/>
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Games Won:" Grid.Column="0" Foreground="IndianRed"/>
                            <TextBlock Text="{Binding CurrentPlayer.GamesWon}" Grid.Column="1" FontWeight="Bold" Foreground="IndianRed"/>
                        </Grid>

                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Win Rate:" Grid.Column="0" Foreground="IndianRed"/>
                            <TextBlock Text="{Binding WinRateFormatted}" Grid.Column="1" FontWeight="Bold" Foreground="IndianRed"/>
                        </Grid>

                        <TextBlock Text="Recent Games:" FontWeight="Bold" Foreground="IndianRed" Margin="0,15,0,5"/>

                        <TextBlock Text="No recent games available" 
                                   Foreground="Gray" 
                                   Margin="10,5,0,0"
                                   Visibility="{Binding HasNoRecentGames, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </StackPanel>

                    <Button Grid.Row="2" 
                            Content="Close" 
                            Command="{Binding CloseStatisticsCommand}" 
                            Width="80" 
                            HorizontalAlignment="Right"
                            Background="LavenderBlush"
                            Foreground="IndianRed"
                            BorderBrush="IndianRed"/>
                </Grid>
            </Border>
        </Grid>

        <!-- About Dialog -->
        <Grid x:Name="AboutDialog" 
              Grid.RowSpan="4" 
              Background="#80000000" 
              Visibility="{Binding IsAboutVisible, Converter={StaticResource BoolToVisibilityConverter}}"
              Panel.ZIndex="1000">
            <Border Background="LavenderBlush" 
                    Width="350" 
                    Height="250" 
                    CornerRadius="5"
                    BorderBrush="IndianRed"
                    BorderThickness="1"
                    Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="About Memory Game" 
                               Grid.Row="0" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Foreground="IndianRed"
                               Margin="0,0,0,15"/>

                    <!-- About Content -->
                    <StackPanel Grid.Row="1">
                        <TextBlock Text="Memory Game" FontWeight="Bold" Foreground="IndianRed" Margin="0,0,0,10"/>
                        <TextBlock Text="Developed by: Palatka Vanessa" Foreground="IndianRed" Margin="0,5"/>
                        <TextBlock Text="Group: 10LF332" Foreground="IndianRed" Margin="0,5"/>
                        <TextBlock Text="Email: vanessa.palatka@student.unitbv.ro" Foreground="IndianRed" Margin="0,5"/>
                    </StackPanel>

                    <Button Grid.Row="2" 
                            Content="Close" 
                            Command="{Binding CloseAboutCommand}" 
                            Width="80" 
                            HorizontalAlignment="Right"
                            Background="LavenderBlush"
                            Foreground="IndianRed"
                            BorderBrush="IndianRed"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>