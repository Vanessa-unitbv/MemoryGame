<Window x:Class="MemoryGame.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:MemoryGame.ViewModels"
        mc:Ignorable="d"
        Title="Sign In" Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

	<Window.Resources>
		<vm:LoginViewModel x:Key="LoginViewModel" />
		<BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
	</Window.Resources>

	<Grid DataContext="{StaticResource LoginViewModel}">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<!-- Header -->
		<TextBlock Text="Welcome! Enjoy this game!"
                   Grid.Row="0"
                   HorizontalAlignment="Center"
                   FontSize="24"
                   Margin="0,20,0,10"/>

		<!-- Content Area -->
		<Grid Grid.Row="1" Margin="20">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>

			<!-- User List -->
			<ListBox Grid.Column="0"
                     ItemsSource="{Binding Users}"
                     SelectedItem="{Binding SelectedUser}"
                     DisplayMemberPath="Username"
                     Height="220"
                     VerticalAlignment="Top" />



			<!-- User Image -->
			<Border Grid.Column="2"
                    Width="150"
                    Height="150"
                    Background="LightGray"
                    BorderBrush="Gray"
                    BorderThickness="1">
				<Image Source="{Binding SelectedUser.ImagePath}"
                       Stretch="Uniform"
                       Margin="5"/>
			</Border>
		</Grid>

		<!-- Bottom Buttons -->
		<StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20">
			<Button Content="New User"
                    Command="{Binding NewUserCommand}"
                    Width="100"
                    Margin="5" />
			<Button Content="Delete User"
                    Command="{Binding DeleteUserCommand}"
                    Width="100"
                    Margin="5"
                    IsEnabled="{Binding IsUserSelected}" />
			<Button Content="Play"
                    Command="{Binding PlayCommand}"
                    Width="100"
                    Margin="5"
                    IsEnabled="{Binding IsUserSelected}" />
			<Button Content="Cancel"
                    Width="100"
                    Margin="5"
                    Click="CloseButton_Click" />
		</StackPanel>

		<!-- New User Dialog Popup -->
		<Grid x:Name="NewUserDialog"
			  Grid.RowSpan="3"
			  Background="#80000000"
			  Visibility="Collapsed">
			<Border Background="White"
					Width="300"
					Height="350"
					CornerRadius="5"
					Padding="20">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="*"/>
						<RowDefinition Height="Auto"/>
					</Grid.RowDefinitions>

					<TextBlock Text="Create New User"
							   Grid.Row="0"
							   FontSize="18"
							   FontWeight="Bold"
							   Margin="0,0,0,15"/>

					<!-- Username input -->
					<StackPanel Grid.Row="1" Margin="0,5">
						<TextBlock Text="Username:" Margin="0,0,0,5"/>
						<TextBox Text="{Binding NewUsername, UpdateSourceTrigger=PropertyChanged}"/>
					</StackPanel>

					<!-- User Image selection -->
					<StackPanel Grid.Row="2" Margin="0,5">
						<TextBlock Text="User Image:" Margin="0,0,0,5"/>
						<StackPanel Orientation="Horizontal">
							<Button Content="&lt;&lt;"
									Command="{Binding PreviousAvatarCommand}"
									Width="40"
									Margin="0,0,5,0" />
							<Border Width="160"
									Height="100"
									BorderBrush="Gray"
									BorderThickness="1">
								<Image Source="{Binding SelectedImagePath}"
									   Stretch="Uniform"
									   Margin="5"/>
							</Border>
							<Button Content="&gt;&gt;"
									Command="{Binding NextAvatarCommand}"
									Width="40"
									Margin="5,0,0,0" />
						</StackPanel>
					</StackPanel>

					<StackPanel Grid.Row="4"
								Orientation="Horizontal"
								HorizontalAlignment="Right">
						<Button Content="Create"
								Command="{Binding CreateUserCommand}"
								Width="80"
								Margin="0,0,5,0" />
						<Button Content="Cancel"
								Command="{Binding CancelCommand}"
								Width="80" />
					</StackPanel>
				</Grid>
			</Border>
		</Grid>
	</Grid>
</Window>